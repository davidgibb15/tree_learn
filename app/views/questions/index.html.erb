<h1>Listing questions</h1>
<%= link_to 'New Question', new_question_path %>
<table>
	<tr>
		<th>Question</th>
		<th>Answer</th>
	</tr>

	<% @questions.each do |q| %>
		
		<tr>
			<td>
			<%= link_to question_path(q) do%>
			<%= q.title %>
			<% end %>
		</td>
			<td><%= q.answer %></td>

			<td><%= link_to 'Show', question_path(q) %></td>
			<td><%= link_to 'Edit', edit_question_path(q) %></td>
			<td><%= link_to 'Destroy', question_path(q), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
	</table>
